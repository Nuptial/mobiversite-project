{
  "name": "mobiversite-mono",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:api dev:web",
    "dev:api": "npm --prefix apps/api run dev",
    "dev:web": "npm --prefix apps/web run dev",
    "seed": "npm --prefix apps/api run seed",
    "test": "npm --prefix apps/web run test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
